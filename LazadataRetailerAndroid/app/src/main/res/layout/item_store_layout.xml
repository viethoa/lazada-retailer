<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            style="@style/text_primary_dark_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLine"
            android:padding="@dimen/space_16_dp"
            android:text="STORE NAME HERE"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_created_time"
            style="@style/text_dark_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_16_dp"
            android:layout_marginTop="@dimen/space_10_dp"
            android:layout_marginBottom="@dimen/space_10_dp"
            android:text="Tạo ngày 15/5/2015"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>